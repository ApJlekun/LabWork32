<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="510,68,0,0" x:Name="ListBox"
                 HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="510,251,0,0" VerticalAlignment="Top" Width="120" x:Name="ComboBox"/>
        <TextBox HorizontalAlignment="Left" Margin="205,151,0,0" VerticalAlignment="Top" Width="120" x:Name="InputTextBox"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="205,180,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
